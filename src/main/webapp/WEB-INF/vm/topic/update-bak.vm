<!DOCTYPE html>
<html lang="en">
  #include("head.vm")
  
  <body>
  <!-- head-->
  #parse("body_1.vm")

   <div class="container theme-showcase"><!-- /container  -->
		<table class="table table-bordered table-hover">  
              <tbody>  
				<form action="update.do" method="post">
					<tr>
                       <td>BrokerAddr:</td>
					   <td><input class="form-inline span2" type="text" placeholder="127.0.0.1:9876" name="brokerAddr" value="$!brokerAddr"/></td>
                    </tr>
					<tr >
					   <td>ClusterName:</td>
					   <td><input class="form-inline span2" type="text" placeholder="defaultCluster" name="clusterName" value="$!clusterName"/></td>
                    </tr>
					<tr >
                       <td>TopicName:</td>
					   <td><input class="form-inline span2" type="text" placeholder="topicName" name="topicName" value="$!topicName" readonly="true"/></td>
                    </tr>
					<tr >
                       <td>ReadQueueNums:</td>
					   <td><input class="form-inline span2" type="text" placeholder="8" name="readQueueNums" value="$!readQueueNums"/></td>
                    </tr>
					<tr >
                       <td>WriteQueueNums:</td>
					   <td><input class="form-inline span2" type="text" placeholder="8" name="writeQueueNums" value="$!writeQueueNums"/></td>
                    </tr>
					<tr >
                       <td>Permission(W|R|WR):</td>
					   <td>
						<select class="span2" name="perm">
							<option value="2" #if($perm == 2)selected="selected"#end>W</option>
                            <option value="4" #if($perm == 4)selected="selected"#end>R</option>
							<option value="6" #if($perm == 6)selected="selected"#end>WR</option>
                        </select>
					   </td>
                    </tr>
					<tr >
                        <td colspan="2">
							<center>
								<button class="btn btn-success" type="submit" >Submit</button>
                            </center>
						</td>
                    </tr>
                </form>
              </tbody>
        </table>
   </div>
   #include("foot.vm")
  </body>
</html>