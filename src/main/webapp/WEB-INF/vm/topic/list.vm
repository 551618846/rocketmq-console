<!DOCTYPE html>
<html lang="en">
<head>
  #include("head.vm")
</head>
  
  <body>
  <!-- head-->
  #parse("body_1.vm")
  <div class="container">
   <button class="btn btn-success" type="button" onclick="add()">Add</button>
  </div>
  <p>&nbsp;</p>
   <div class="container theme-showcase"><!-- /container  -->
		<table class="table table-bordered table-hover">  
              <thead>  
                <tr>  
                  <th>Topic</th>
				  <th>operations</th>
                </tr>  
              </thead>  
              <tbody>  
				#foreach($topicBean in $topicBeanList)
					<tr>
                        <td>$topicBean.topicName</td>
						<td>&nbsp;&nbsp; 
							<button class="btn btn-info" type="button" onclick="stat('$topicBean.topicName')">Stat</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
							<button class="btn btn-info" type="button" onclick="route('$topicBean.topicName')">Route</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
							<button class="btn btn-info" type="button" onclick="upd('$topicBean.topicName')">Update</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                            <button class="btn btn-danger" type="button" onclick="del('$topicBean.topicName')">Delete</button>
							&nbsp;&nbsp;
						</td>
                    </tr>
				#end
              </tbody>
        </table>
   </div>
   #include("foot.vm")
     <script language="javascript">
	function add() {
		window.location.href = "add.do";
	}
	
  	function stat(topicName) {
		window.location.href = "stats.do?topicName=" + topicName;
	}
	
	function route(topicName) {
		window.location.href = "route.do?topicName=" + topicName;
	}
	
	function del(topicName) {
		window.location.href = "delete.do?topicName=" + topicName;
	}

	function upd(topicName) {
		window.location.href = "update.do?topicName=" + topicName;
	}
</script>
  </body>
</html>
