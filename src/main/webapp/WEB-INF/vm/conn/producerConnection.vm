<!DOCTYPE html>
<html lang="en">
<head>
  #include("head.vm")
</head>
  
  <body>
  <!-- head-->
  #parse("body_1.vm")
   <div class="container theme-showcase"><!-- /container  -->
	  <form class="navbar-form navbar-left" role="search" action="producerConnection.do" method="post">
          producerGroup:
		  <div class="form-group">
            <input type="text" class="form-control" placeholder="group" value="$!group" name="group">
          </div>
		  topicName:
		  <div class="form-group">
			<input type="text" class="form-control" placeholder="topicName" value="$!topicName" name="topicName">
		  </div>
		  <button type="submit" class="btn btn-default">Submit</button>
      </form>
   </div>
   #if($pc)
   <div class="container theme-showcase">
		<table class="table table-bordered table-hover">  
              <thead>  
                <tr>  
                  <th>id</th>
				  <th>ClientId</th>
				  <th>ClientAddr</th>
				  <th>Language</th>
				  <th>Version</th>
                </tr>  
              </thead>  
              <tbody> 
				#foreach($conn in $pc.connectionSet)
					<tr>
                        <td>$!{velocityCount}</td>
						<td>$conn.clientId</td>
						<td>$conn.ClientAddr</td>
						<td>$conn.language</td>
						<td>$conn.version</td>
					</tr>
				#end
              </tbody>
        </table>
   </div>
   #end
   #include("foot.vm")
  </body>
</html>
